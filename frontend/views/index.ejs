<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>I2VGen-XL Video Generator</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>I2VGen-XL Video Generator</h1>
      <form id="uploadForm">
        <input
          type="file"
          id="imageInput"
          name="image"
          accept="image/*"
          required
        />
        <textarea
          id="promptInput"
          name="prompt"
          placeholder="Enter your text prompt"
          required
        ></textarea>
        <div>
          <label for="numFrames">Number of Frames:</label>
          <input
            type="number"
            id="numFrames"
            name="numFrames"
            value="50"
            min="16"
            max="200"
          />
        </div>
        <div>
          <label for="frameRate">Frame Rate (fps):</label>
          <input
            type="number"
            id="frameRate"
            name="frameRate"
            value="10"
            min="1"
            max="30"
          />
        </div>
        <button type="submit">Generate Video</button>
      </form>
      <div
        id="logOutput"
        style="
          display: none;
          height: 200px;
          overflow-y: scroll;
          border: 1px solid #ccc;
          padding: 10px;
          margin-top: 20px;
        "
      ></div>
      <div id="result" style="display: none">
        <h2>Generated Video:</h2>
        <video id="generatedVideo" controls crossorigin="anonymous"></video>
      </div>
    </div>
    <script src="/script.js"></script>
  </body>
</html>
